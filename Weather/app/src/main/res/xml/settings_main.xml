<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings">

    <EditTextPreference
        android:defaultValue="@string/settings_location_default_value"
        android:inputType="text"
        android:key="@string/settings_location_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_location_label" />

    <ListPreference
        android:defaultValue="@string/settings_unit_default_value"
        android:entries="@array/settings_unit_labels"
        android:entryValues="@array/settings_unit_values"
        android:key="@string/settings_unit_key"
        android:title="@string/settings_unit_label" />

</PreferenceScreen>